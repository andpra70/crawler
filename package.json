{
  "name": "site-image-crawler",
  "version": "1.0.0",
  "description": "Node.js crawler che scarica immagini da un sito fino a una profonditÃ  configurabile",
  "main": "src/crawler.js",
  "type": "commonjs",
  "scripts": {
    "crawl": "node src/crawler.js",
    "dev:api": "node src/server.js",
    "dev:web": "vite --config web/vite.config.js",
