    "sharp": "^0.34.4",
    "tough-cookie": "^5.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.2",
    "concurrently": "^9.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.1.7"
  }
